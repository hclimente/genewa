profiles {

    standard {
        process.executor = 'local'
        executor.queueSize = 4
    }

    cbio {
        process.executor = 'sge'
        process.queue = 'all.q'
        process.clusterOptions = '-S /bin/bash'
        process.scratch = true
    }

    cbio.bigmem {
        process.executor = 'sge'
        process.queue = 'all.q'
        process.clusterOptions = '-S /bin/bash -l mem=20G'
        process.scratch = true
    }

    curie {
        process.executor = 'pbs'
        process.queue = 'batch'
        process.scratch = true
    }

    curie.bigmem {
        process.executor = 'pbs'
        process.queue = 'batch'
        process.clusterOptions = '-l mem=20G'
        process.scratch = true
    }

}
